<view class="new-item">
  <view class="item" wx:for="{{list}}" wx:key="id" bindtap="goItemDetail" data-detail="{{item}}">
    <image lazy-load="true" mode="widthFix" src="{{item.listPicUrl}}" />
    <view class="name">
      <text>{{item.name}}</text>
    </view>
    <view class="price">
      <text>ï¿¥{{item.retailPrice}}</text>
    </view>
  </view>
</view>