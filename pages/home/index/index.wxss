/* pages/home/home.wxss */

.container {
  background-color: #f7f7f7;
}

.menus {
  display: flex;
  flex-wrap: wrap;
  min-height: 300rpx;
}

.menus .item {
  width: 20%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.menus .item image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}

.menus .item text {
  font-size: 26rpx;
}

.sale-rank {
  display: flex;
  flex-wrap: wrap;
  padding: 0 25rpx 25rpx;
  min-height: 300rpx;
}

.sale-rank .item {
  width: 24%;
  margin: 0.5%;
  padding: 20rpx 0;
  background-color: #f4f4f4;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sale-rank .item .name {
  font-size: 28rpx;
}

.sale-rank .item image {
  width: 150rpx;
  height: 150rpx;
}
