  <view class="item" wx:for="{{list}}" wx:key="id" bindtap="goDetail" data-detail="{{item}}">
    <image lazy-load="true" mode="widthFix" src="{{item.pic}}" />
    <view class="name">
      <text>{{item.name}}</text>
    </view>
    <view class="price">
      <text>ï¿¥{{item.price}}</text>
    </view>
  </view>
</view>